<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC Retailers Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        :root {
            --maroon: #800020;
            --space-grey: #4a4a4a;
            --cyan: #00bcd4;
            --dark-grey: #2c2c2c;
        }
        body { background-color: var(--space-grey); color: white; }
        .navbar { background: linear-gradient(135deg, var(--maroon), var(--dark-grey)) !important; }
        .navbar-brand { color: white !important; font-weight: bold; font-size: 1.5rem; }
        .nav-tabs .nav-link { background-color: var(--dark-grey); color: white; border-color: var(--maroon); }
        .nav-tabs .nav-link.active { background-color: var(--cyan); color: var(--dark-grey); }
        .card { background-color: var(--dark-grey); border-color: var(--maroon); }
        .table-dark { background-color: var(--dark-grey); }
        .btn-primary { background-color: var(--maroon); border-color: var(--maroon); }
        .btn-success { background-color: var(--cyan); border-color: var(--cyan); color: var(--dark-grey); }
        .btn-info { background-color: var(--cyan); border-color: var(--cyan); color: var(--dark-grey); }
        .form-control { background-color: var(--dark-grey); border-color: var(--maroon); color: white; }
        .form-control:focus { background-color: var(--dark-grey); border-color: var(--cyan); color: white; box-shadow: 0 0 0 0.2rem rgba(0, 188, 212, 0.25); }
        h1, h3, h4 { color: var(--cyan); }
        .list-group-item { background-color: var(--dark-grey); border-color: var(--maroon); color: white; }
        .badge { background-color: var(--cyan) !important; color: var(--dark-grey) !important; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-store"></i> ABC Retailers Management System
                </a>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center py-3" style="background-color: var(--dark-grey); border-top: 2px solid var(--maroon);">
        <div class="container">
            &copy; 2025 ABC Retailers Management System - Powered by Azure Cloud
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
