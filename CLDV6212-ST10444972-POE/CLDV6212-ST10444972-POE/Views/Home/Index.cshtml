@{
    ViewData["Title"] = "Retail Management Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-center">ABC Retailers Management Dashboard</h1>
            <p class="text-center text-muted">Comprehensive retail management system powered by Azure Cloud Services</p>
        </div>
    </div>
    
    <ul class="nav nav-tabs mb-4" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#tables">📊 Customer & Product Management</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#blobs">📸 Product Media Gallery</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#queues">🚚 Order Processing Queue</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#files">📄 Contract Management</a>
        </li>
    </ul>

    <div class="tab-content">
        <div id="tables" class="tab-pane fade show active">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="mb-0">👥 Customer Management</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" action="/Home/AddCustomer" class="mb-4">
                                <div class="mb-3">
                                    <label class="form-label">Customer Name</label>
                                    <input type="text" name="name" class="form-control" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email Address</label>
                                    <input type="email" name="email" class="form-control" required>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Add Customer</button>
                            </form>
                            
                            <h4>Customer Database</h4>
                            <div class="table-responsive">
                                <table class="table table-dark table-striped">
                                    <thead><tr><th>ID</th><th>Name</th><th>Email</th><th>Actions</th></tr></thead>
                                    <tbody>
                                        @foreach (var customer in ViewBag.Customers as List<CLDV6212_ST10444972_POE.Models.Customer>)
                                        {
                                            <tr>
                                                <td><small>@customer.Id.Substring(0, 8)...</small></td>
                                                <td>@customer.Name</td>
                                                <td>@customer.Email</td>
                                                <td>
                                                    <form method="post" action="/Home/DeleteCustomer" style="display:inline;">
                                                        <input type="hidden" name="id" value="@customer.Id" />
                                                        <button type="submit" class="btn btn-sm btn-danger">🗑️</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="mb-0">🛍️ Product Catalog</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" action="/Home/AddProduct" class="mb-4">
                                <div class="mb-3">
                                    <label class="form-label">Product Name</label>
                                    <input type="text" name="name" class="form-control" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Price ($)</label>
                                    <input type="number" name="price" step="0.01" class="form-control" required>
                                </div>
                                <button type="submit" class="btn btn-success w-100">Add Product</button>
                            </form>
                            
                            <h4>Product Inventory</h4>
                            <div class="table-responsive">
                                <table class="table table-dark table-striped">
                                    <thead><tr><th>ID</th><th>Product</th><th>Price</th><th>Actions</th></tr></thead>
                                    <tbody>
                                        @foreach (var product in ViewBag.Products as List<CLDV6212_ST10444972_POE.Models.Product>)
                                        {
                                            <tr>
                                                <td><small>@product.Id.Substring(0, 8)...</small></td>
                                                <td>@product.Name</td>
                                                <td><strong>$@product.Price</strong></td>
                                                <td>
                                                    <form method="post" action="/Home/DeleteProduct" style="display:inline;">
                                                        <input type="hidden" name="id" value="@product.Id" />
                                                        <button type="submit" class="btn btn-sm btn-danger">🗑️</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="blobs" class="tab-pane fade">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="mb-0">📸 Upload Product Photos</h3>
                </div>
                <div class="card-body">
                    <form method="post" action="/Home/UploadProductMedia" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label">Select Product</label>
                                <select name="productId" class="form-control" required>
                                    <option value="">Choose a product...</option>
                                    @foreach (var product in ViewBag.Products as List<CLDV6212_ST10444972_POE.Models.Product>)
                                    {
                                        <option value="@product.Id">@product.Name - $@product.Price</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Product Image</label>
                                <input type="file" name="file" class="form-control" accept="image/*" required>
                            </div>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-info">📤 Upload Photo</button>
                        </div>
                    </form>
                </div>
            </div>
            
            <h3>🖼️ Product Media Gallery</h3>
            <div class="row">
                @foreach (var media in ViewBag.ProductMedia as List<CLDV6212_ST10444972_POE.Models.ProductMedia>)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card h-100">
                            <img src="@media.BlobUrl" class="card-img-top" style="height:200px;object-fit:cover;" alt="@media.FileName">
                            <div class="card-body">
                                <h6 class="card-title text-info">@media.ProductName</h6>
                                <small class="text-muted">@media.FileName</small>
                            </div>
                            <div class="card-footer">
                                <a href="@media.BlobUrl" target="_blank" class="btn btn-sm btn-outline-info w-100">🔍 View Full Size</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div id="queues" class="tab-pane fade">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="mb-0">🚚 Order Processing Queue</h3>
                </div>
                <div class="card-body">
                    <form method="post" action="/Home/SendMessage">
                        <div class="mb-3">
                            <label class="form-label">Order Processing Message</label>
                            <input type="text" name="message" placeholder="e.g., Processing order #12345" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-warning">📨 Queue Message</button>
                    </form>
                </div>
            </div>
            
            <h3>📋 Active Order Queue</h3>
            <div class="list-group">
                @foreach (var message in ViewBag.Messages as List<string>)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span>📦 @message</span>
                        <span class="badge">Pending</span>
                    </div>
                }
            </div>
        </div>

        <div id="files" class="tab-pane fade">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="mb-0">📄 Contract Management</h3>
                </div>
                <div class="card-body">
                    <form method="post" action="/Home/UploadContract" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label">Upload Contract Document</label>
                            <input type="file" name="file" class="form-control" accept=".pdf,.docx,.doc" required>
                            <small class="form-text text-muted">Supported formats: PDF, Word documents</small>
                        </div>
                        <button type="submit" class="btn btn-secondary">📤 Upload Contract</button>
                    </form>
                </div>
            </div>
            
            <h3>📁 Contract Repository</h3>
            <div class="list-group">
                @foreach (var file in ViewBag.Files as List<string>)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span>📄 @file</span>
                        <span class="badge">Stored</span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
